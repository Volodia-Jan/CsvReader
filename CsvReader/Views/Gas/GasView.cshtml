@using CsvReader.Core.Models
@model IEnumerable<Gas>
<!Doctype html>
<html>
    <head>
        <title>Gas Page</title>
        <link href="~/style.css" rel="stylesheet"/>
        <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
        <script src="papaparse.min.js"></script>
    </head>
    <body>
        <header>
            <nav>
                <a href="#table">Table</a>
                <a href="#chart">Chart</a>
            </nav>
        </header>
        <main id="table" >
            <div class="table">
                <table>
                    <thead>
                        <tr>
                            <th>@nameof(Gas.Id)</th>
                            <th>@nameof(Gas.SiteName)</th>
                            <th>@nameof(Gas.GasBrand)</th>
                            <th>@nameof(Gas.City)</th>
                            <th>@nameof(Gas.ClusterMediaPrice)</th>
                            <th>@nameof(Gas.ClientMarketPrice)</th>
                            <th>@nameof(Gas.Latitude)</th>
                            <th>@nameof(Gas.Longitude)</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var gas in Model){
                            <tr>
                                <td>@gas.Id</td>
                                <td>@gas.SiteName</td>
                                <td>@gas.GasBrand</td>
                                <td>@gas.City</td>
                                <td>@gas.ClusterMediaPrice</td>
                                <td>@gas.ClientMarketPrice</td>
                                <td>@gas.Latitude</td>
                                <td>@gas.Longitude</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div id="chart" class="chart">
                <canvas id="gasChart"></canvas>
                <script src="~/app_chart.js"></script>
            </div>
        </main>
    </body>
</html>